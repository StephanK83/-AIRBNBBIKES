<div>
  <ul>
    <% @bikes.each do |b| %>
      <%#= b.brand %> <%# could be improved one day this week 20.02.2023 %>
      <%= link_to b.brand, bike_path(b) %>
    <% end %>
  </ul>
</div>

<%= cl_image_tag("jyao2rntpihyjmlv53j0",
      width: 400, height: 300, crop: :fill) %>

<div class="row">
  <% @bikes.each do |bike| %>
    <div class="col-md-4">
      <div class="card mb-4">
        <img src="<%= bike.image_url %>" class="card-img-top" alt="<%= bike.name %>">
        <div class="card-body">
          <h5 class="card-title"><%= bike.name %></h5>
          <p class="card-text"><%= bike.description %></p>
          <%= link_to "Book now", new_bike_booking_path(bike), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
