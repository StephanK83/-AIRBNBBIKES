<div class="container">
  <div class="row">
    <% @bikes.each do |b| %>
      <div class="col-lg-2 col-md-4 col-sm-6 mb-4">
        <div class="product-box shadow rounded">
          <div class="product-inner-box position-relative">
            <div class="icons">
              <button class="btn btn-link position-absolute top-0 end-0">
                <i class="fas fa-heart heart"></i>
              </button>
            </div>
            <%= cl_image_tag b.photo.key, class: "card-img-top", width: 400, height: 300, crop: :lfill, gravity: :center %>
            <div class="product-info">
                <div class="product-name">
                  <h4 class="card-title"><%= b.brand %></h4>
                </div>
                <div>
                  Size: <span><%= b.size %></span>
                </div>
                <div>
                  Color: <span><%= b.color %></span>
                </div>
                <div class="product-price">
                  $<span><%= b.price %></span> per day
                </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

# to display geocoding map 24.02.23
<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>