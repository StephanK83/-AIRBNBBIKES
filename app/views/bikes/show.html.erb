<div class="container">
  <h2><%= @bike.brand %></h2>
  <p><%#= @bike.photo %></p>
  <p><%= @bike.color %></p>
  <p><%= @bike.size %></p>
  <p><%= @bike.category %></p>
  <p><%= @bike.address %></p>
  <p><%= @bike.price %></p>

<%= link_to "Book the bike",
    new_booking_path(bike_id: @bike.id),
    data: {turbo_confirm: "Are you sure you want to book"}
  %>

  <%= link_to "Update",
    edit_bike_path(@bike),
    data: {turbo_confirm: "Are you sure you want to update?"}
  %>

  <%= link_to "Delete",
    bike_path(@bike),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
  %>
</div>
